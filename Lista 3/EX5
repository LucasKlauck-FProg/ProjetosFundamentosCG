/******************************************************************************
Faça um algoritmo para receber um número qualquer do usuário e informar na tela se é par ou se é ímpar. 
*******************************************************************************/
#include <stdio.h>

int main() {
    int numero;

    printf("Digite um número inteiro: ");
    scanf("%d", &numero);

    if (numero % 2 == 0) {
        printf("O número %d é par.\n", numero);
    } else {
        printf("O número %d é ímpar.\n", numero);
    }

    return 0;
}
