/******************************************************************************
Crie um programa que verifica se um número inteiro informado pelo usuário é divisível por 3. 
*******************************************************************************/

#include <stdio.h>

int main() {
    
    int numero;

    printf("Digite um número inteiro: ");
    scanf("%d", &numero);

    if (numero % 3 == 0) {
        
        printf("O número é divisível por 3");
        
    } else {
        
        printf("O número não é divisível por 3");
    }

    return 0;
}

