/******************************************************************************
Encontrar o dobro de um número caso ele seja positivo e
o seu triplo caso seja negativo, imprimindo o resultado. 
*******************************************************************************/

#include <stdio.h>

int main() {
    
    float numero, resultado;


    printf("Digite um número: ");
    scanf("%f", &numero);

    
    if (numero > 0) {
        
        resultado = numero * 2;
        
        printf("O dobro de %.2f é: %.2f\n", numero, resultado);
        
    } else if (numero < 0) {
        
        resultado = numero * 3;
        
        printf("O triplo de %.2f é: %.2f\n", numero, resultado);
        
    } else {
        
        printf("O número é zero, logo não tem dobro nem triplo.\n");
    }

    return 0;
}

