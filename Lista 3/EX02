/******************************************************************************
 Faça um algoritmo que leia os valores A, B, C e 
 imprima na tela se a soma de A + B é menor que A + C. 
*******************************************************************************/
#include <stdio.h>

int main()
{
   float valor_a, valor_b, valor_c;
  
    printf("Insira o valor de A: \n");
    scanf("%f", &valor_a);
    
    printf("Insira o valor de B: \n");
    scanf("%f", &valor_b);
    
    printf("Insira o valor de C: \n");
    scanf("%f", &valor_c);
    
    
    if ((valor_a + valor_b) < (valor_a + valor_c)) {
        printf("A soma de A + B é menor que A + C.\n");
        
        
    } else {
        printf("A soma de A + B é maior que A + C.\n");
    }
    
    
    return 0;
}
